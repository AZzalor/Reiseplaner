<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/createlandLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/createlandEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="@string/land"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/createstadtEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="@string/stadt"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/createobjektEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="@string/objekt"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/createbeschreibungEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="@string/beschreibung"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createzeitraumLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/createlandLinearLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/createanreiseEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:inputType="datetime"
                android:hint="@string/anreise"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/createabreiseEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:inputType="datetime"
                android:hint="@string/anreise"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimaryDark"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/createzeitraumLayout"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createOkButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.50"
                android:text="@string/okButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/createAbbrechenButton"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:text="@string/abbrechenButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>