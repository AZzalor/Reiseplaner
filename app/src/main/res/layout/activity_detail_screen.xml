<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/detaillandLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/detaillandEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text="@string/land"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/detailstadtEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text="@string/stadt"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/detailobjektEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text="@string/objekt"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/detailbeschreibungEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text="@string/beschreibung"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zeitraumLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detaillandLinearLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/detailanreiseEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:inputType="date"
                android:text="@string/anreise"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/detailabreiseEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:inputType="date"
                android:text="@string/anreise"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bewertungReiseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zeitraumLayout"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/bewertungtexttview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:gravity="bottom|left"
                android:text="@string/bewertung"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/detailstar1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:src="@drawable/star"/>

                <ImageView
                    android:id="@+id/detailstar2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:src="@drawable/star"/>

                <ImageView
                    android:id="@+id/detailstar3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:src="@drawable/star"/>

                <ImageView
                    android:id="@+id/detailstar4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:src="@drawable/star"/>

                <ImageView
                    android:id="@+id/detailstar5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:src="@drawable/star"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bewertungReiseLayout"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detailOkButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.50"
                android:text="@string/okButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold" />

            <Button
                android:id="@+id/detailAbbrechenButton"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"
                android:text="@string/abbrechenButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/abgeschlossenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailButtonsLayout"
            android:orientation="vertical">

            <Button
                android:id="@+id/abgeschlossenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:text="@string/abgeschlossenButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/loeschenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:text="@string/loeschenButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/standardSchrift"
                android:textStyle="bold"/>


        </LinearLayout>
        
    </RelativeLayout>

</ScrollView>